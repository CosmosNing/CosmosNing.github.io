// personlize code highlight theme

$cosmosning-background   = #1d1f21
$cosmosning-current-line = #282a2e
$cosmosning-selection    = #373b41
$cosmosning-foreground   = #c5c8c6
$cosmosning-comment      = #74b9ff
$cosmosning-red          = #ff4757
$cosmosning-orange       = #eccc68
$cosmosning-yellow       = #e7c547
$cosmosning-green        = #2ed573
$cosmosning-aqua         = #7bed9f
$cosmosning-blue         = #1e90ff
$cosmosning-purple       = #e84393
$cosmosning-gutter       = {
    color: lighten($cosmosning-background, 50%),
    bg-color: darken($cosmosning-background, 100%)
}

$cosmosning-deletion     = #008000
$cosmosning-addition     = #800000

// Placeholder: $code-block
$code-block {
  overflow: auto;
  margin: 20px 0;
  padding: 0;
  font-size $code-font-size;
  color: $cosmosning-foreground;
  background: $cosmosning-background;
  line-height: $line-height-code-block;
}

pre, code { font-family: $code-font-family; }

code {
  padding: 2px 4px;
  word-wrap: break-word;
  color: $code-foreground;
  background: $code-background;
  border-radius: $code-border-radius;
  font-size: $code-font-size;
}

pre {
  @extend $code-block;
  padding: 10px;
  code {
    padding: 0;
    color: $cosmosning-foreground;
    background: none;
    text-shadow: none;
  }
}

.highlight {
  @extend $code-block;
  // Read values from NexT config and set they as local variables to use as string variables (in any CSS section). 
  hexo-config('codeblock.border_radius') is a 'unit' ? (cbradius = unit(hexo-config('codeblock.border_radius'), px)) : (cbradius = 1px) 
  border-radius: cbradius;

  pre {
    border: none;
    margin: 0;
    padding: 10px 0;
  }

  table {
    margin: 0;
    width: auto;
    border: none;
  }

  td {
    border: none;
    padding: 0;
  }

  figcaption {
    clearfix();
    font-size: 1em;
    color: $cosmosning-foreground;
    line-height: 1em;
    margin-bottom: 1em;
    margin: 0em;
    padding: 0.5em;
    background: $code-background;
    border-bottom: 1px solid #e9e9e9;

    a {
      float: right;
      color: $cosmosning-foreground;

      &:hover { border-bottom-color: $cosmosning-foreground; }
    }
  }

  .gutter pre {
    padding-left: 10px
    padding-right: 10px
    color: $cosmosning-gutter.color
    text-align: right
    background-color: $cosmosning-gutter.bg-color
  }

  .code pre {
    width: 100%
    padding-left: 10px
    padding-right: 10px
    background-color: $cosmosning-background
  }

  .line { height: 20px; }
}


.gutter {
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.gist table {
  width: auto;

  td { border: none; }
}

// For diff highlight
pre .deletion { background: $cosmosning-deletion; }
pre .addition { background: $cosmosning-addition; }
pre .meta     { color: $cosmosning-purple; }

pre {

  .comment { color: $cosmosning-comment; }

  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo {
    color: $cosmosning-red;
  }

  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
  .command {
    color: $cosmosning-orange;
  }

  .ruby .class .title
  .css .rules .attribute
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
  .special
  .number
  .formula {
    color: $cosmosning-green;
  }

  .title
  .css .hexcolor {
    color: $cosmosning-aqua;
  }

  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title {
    color: $cosmosning-blue;
  }

  .keyword
  .javascript .function {
    color: $cosmosning-purple;
  }

}

